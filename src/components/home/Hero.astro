---
import Button from '../ui/Button.astro';
---

<section class="relative overflow-hidden bg-linear-to-br from-primary-900 via-primary-800 to-secondary-900 text-white">
  <!-- Background pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>

  <div class="container mx-auto relative z-10">
    <div class="flex flex-col lg:flex-row items-center justify-between py-20 lg:py-32 gap-12">
      <!-- Content -->
      <div class="flex-1 text-center lg:text-left space-y-6 animate-fadeInUp">
        <div class="inline-block px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-semibold mb-4">
          ðŸš€ Industry-Leading Solutions
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          Transform Your
          <span class="block text-secondary-300">Supply Chain Excellence</span>
        </h1>
        
        <p class="text-lg md:text-xl text-primary-100 max-w-2xl">
          Streamline operations with our integrated logistics and manufacturing solutions. 
          From warehousing to delivery, we power your success with cutting-edge technology and expertise.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start pt-4">
          <Button href="/rfq" size="lg" variant="secondary">
            Request a Quote
          </Button>
          <Button href="/capabilities" size="lg" variant="outline" class="bg-white/10! border-white! text-white! hover:bg-white/20!">
            Explore Capabilities
          </Button>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 pt-8 max-w-2xl">
          <div class="text-center lg:text-left">
            <div class="text-3xl lg:text-4xl font-bold text-secondary-300">500+</div>
            <div class="text-sm text-primary-200 mt-1">Global Clients</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl lg:text-4xl font-bold text-secondary-300">50M+</div>
            <div class="text-sm text-primary-200 mt-1">Units Shipped</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl lg:text-4xl font-bold text-secondary-300">99.9%</div>
            <div class="text-sm text-primary-200 mt-1">On-Time Delivery</div>
          </div>
        </div>
      </div>

      <!-- Visual Element -->
      <div class="flex-1 relative animate-fadeIn">
        <div class="relative w-full max-w-lg mx-auto">
          <!-- Decorative elements -->
          <div class="absolute -top-4 -right-4 w-72 h-72 bg-secondary-500 rounded-full opacity-20 blur-3xl"></div>
          <div class="absolute -bottom-4 -left-4 w-72 h-72 bg-primary-500 rounded-full opacity-20 blur-3xl"></div>
          
          <!-- Main visual container -->
          <div class="relative glass rounded-3xl p-8 shadow-2xl">
            <div class="space-y-4">
              <!-- Icon grid -->
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white/20 backdrop-blur-sm rounded-xl p-6 flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 text-secondary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                  <span class="text-sm font-semibold mt-2">Warehousing</span>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-xl p-6 flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 text-secondary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <span class="text-sm font-semibold mt-2">Fast Delivery</span>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-xl p-6 flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 text-secondary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                  <span class="text-sm font-semibold mt-2">Quality Assured</span>
                </div>
                <div class="bg-white/20 backdrop-blur-sm rounded-xl p-6 flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 text-secondary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-sm font-semibold mt-2">Global Reach</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full">
      <path d="M0 120L60 110C120 100 240 80 360 70C480 60 600 60 720 65C840 70 960 80 1080 85C1200 90 1320 90 1380 90L1440 90V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
    </svg>
  </div>
</section>

