---
import Button from '../ui/Button.astro';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="relative py-32 overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src="https://placehold.co/2070x1380/991b1b/ffffff?text=Contact+Background"
      alt="Modern warehouse operations"
      class="w-full h-full object-cover"
      width="2070"
      height="1380"
    />
    <div class="absolute inset-0 bg-linear-to-r from-red-900/95 to-rose-900/95"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center text-white">
      <div class="inline-block px-4 py-2 mb-6 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
        {t('hero.badge')}
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
        {t('cta.title')} <span class="text-transparent bg-clip-text bg-linear-to-r from-red-400 to-rose-400">{t('cta.titleHighlight')}</span>?
      </h2>
      <p class="text-xl md:text-2xl text-slate-200 mb-12 max-w-2xl mx-auto leading-relaxed">
        {t('cta.description')}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16">
        <a 
          href="#contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-red-900 bg-white hover:bg-slate-100 rounded-lg shadow-2xl hover:shadow-3xl transition-all group"
        >
          {t('cta.getStarted')}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a 
          href="#services"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white hover:bg-white/10 rounded-lg shadow-2xl hover:shadow-3xl transition-all group"
        >
          {t('nav.pricing')}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <!-- Trust indicators -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group">
          <div class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-red-200">{t('cta.yearsExperience')}</div>
          <div class="text-sm text-slate-300 group-hover:text-rose-300 transition-colors">Disponibilidad</div>
        </div>
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group">
          <div class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-red-200">{t('cta.certified')}</div>
          <div class="text-sm text-slate-300 group-hover:text-rose-300 transition-colors">Ahorro vs Humano</div>
        </div>
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group">
          <div class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-red-200">{t('cta.support')}</div>
          <div class="text-sm text-slate-300 group-hover:text-rose-300 transition-colors">Soporte</div>
        </div>
        <div class="backdrop-blur-sm bg-white/10 rounded-xl p-6 hover:bg-white/20 transition-all border border-white/10 hover:border-white/30 group">
          <div class="text-3xl md:text-4xl font-bold mb-2 text-transparent bg-clip-text bg-linear-to-r from-white to-red-200">{t('cta.network')}</div>
          <div class="text-sm text-slate-300 group-hover:text-rose-300 transition-colors">Cobertura</div>
        </div>
      </div>
    </div>
  </div>
</section>

