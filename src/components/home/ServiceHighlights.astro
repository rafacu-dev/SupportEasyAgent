---
import FeatureShowcase from '../react/FeatureShowcase';
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="services" class="py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-orange-100 text-orange-800 text-sm font-semibold rounded-full">
        {t('serviceHighlights.badge')}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6">
        {t('serviceHighlights.title')} <span class="text-transparent bg-clip-text bg-linear-to-r from-orange-600 to-amber-600">{t('serviceHighlights.titleHighlight')}</span>
      </h2>
      <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
        {t('serviceHighlights.description')}
      </p>
    </div>
  </div>

  <FeatureShowcase 
    client:load 
    translations={{
      feature1Title: t('features.feature1.title'),
      feature1Description: t('features.feature1.description'),
      feature1DetailedDescription: t('features.feature1.detailedDescription'),
      feature2Title: t('features.feature2.title'),
      feature2Description: t('features.feature2.description'),
      feature2DetailedDescription: t('features.feature2.detailedDescription'),
      feature3Title: t('features.feature3.title'),
      feature3Description: t('features.feature3.description'),
      feature3DetailedDescription: t('features.feature3.detailedDescription'),
      feature4Title: t('features.feature4.title'),
      feature4Description: t('features.feature4.description'),
      feature4DetailedDescription: t('features.feature4.detailedDescription'),
    }}
  />
</section>

