---
import { getLangFromUrl, useTranslations } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative py-24 overflow-hidden" style="background: linear-gradient(135deg, #9a3412 0%, #92400e 50%, #7c2d12 100%);">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-slate-900/90"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <div class="inline-block px-4 py-2 mb-4 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full">
        {t('stats.badge')}
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        {t('stats.title')} <span class="text-transparent bg-clip-text bg-linear-to-r from-orange-400 to-amber-400">{t('stats.titleHighlight')}</span>
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        {t('stats.description')}
      </p>
    </div>

    <!-- Beneficios Clave -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <div class="backdrop-blur-sm bg-white/5 rounded-xl p-8 border border-white/10 hover:bg-white/10 transition-all group">
        <div class="w-16 h-16 rounded-full bg-orange-500/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t('stats.benefit1.title')}</h3>
        <p class="text-slate-300 leading-relaxed">
          {t('stats.benefit1.description')}
        </p>
      </div>

      <div class="backdrop-blur-sm bg-white/5 rounded-xl p-8 border border-white/10 hover:bg-white/10 transition-all group">
        <div class="w-16 h-16 rounded-full bg-amber-500/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-8 h-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t('stats.benefit2.title')}</h3>
        <p class="text-slate-300 leading-relaxed">
          {t('stats.benefit2.description')}
        </p>
      </div>

      <div class="backdrop-blur-sm bg-white/5 rounded-xl p-8 border border-white/10 hover:bg-white/10 transition-all group">
        <div class="w-16 h-16 rounded-full bg-orange-500/20 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
          <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-white mb-3">{t('stats.benefit3.title')}</h3>
        <p class="text-slate-300 leading-relaxed">
          {t('stats.benefit3.description')}
        </p>
      </div>
    </div>

  </div>
</section>

