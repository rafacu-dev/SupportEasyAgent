---
import { Image } from 'astro:assets';

interface Props {
  testimonial: {
    quote: string;
    name: string;
    role: string;
    image: ImageMetadata;
    ringColor: string;
  };
  variant?: 'default' | 'home';
}

const { testimonial, variant = 'default' } = Astro.props;
const starPath = "M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z";

// Style variants
const cardClasses = variant === 'home' 
  ? "bg-slate-50 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow flex flex-col h-full"
  : "bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 flex flex-col h-full";

const quoteClasses = variant === 'home'
  ? "text-slate-700 mb-6 leading-relaxed flex-1"
  : "text-gray-700 mb-6 leading-relaxed flex-1";

const nameClasses = variant === 'home'
  ? "font-semibold text-slate-900"
  : "font-semibold text-gray-900";

const roleClasses = variant === 'home'
  ? "text-sm text-slate-600"
  : "text-sm text-gray-600";
---

<div class={cardClasses}>
  <div class="flex items-center mb-6">
    <div class="flex text-yellow-400">
      {Array.from({ length: 5 }).map(() => (
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d={starPath} />
        </svg>
      ))}
    </div>
  </div>
  <p class={quoteClasses}>
    "{testimonial.quote}"
  </p>
  <div class="flex items-center mt-auto">
    <div class={`w-12 h-12 rounded-full overflow-hidden mr-4 ring-2 ${testimonial.ringColor}`}>
      <Image 
        src={testimonial.image}
        alt={testimonial.name}
        class="w-full h-full object-cover"
        width={48}
        height={48}
      />
    </div>
    <div>
      <div class={nameClasses}>{testimonial.name}</div>
      <div class={roleClasses}>{testimonial.role}</div>
    </div>
  </div>
</div>

